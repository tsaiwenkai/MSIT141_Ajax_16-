
<div class="col-6">
    <form name="useInfo" method="post" enctype="application/x-www-form-urlencoded" action="~/api/index">
        <div class="form-group">
            <label for="InputName">姓名</label>
            <input type="text" class="form-control" id="InputName" name="Name">
            <small id="nameHelp" class="form-text text-muted"></small>
        </div>
        <div class="form-group">
            <label for="InputEmail">電子郵件</label>
            <input type="text" class="form-control" id="InputEmail" name="Email">
        </div>
        <div class="form-group">
            <label for="InputAge">年紀</label>
            <input type="number" class="form-control" id="InputAge" name="Age">
        </div>
        <div class="custom-file  mt-3">
            <input type="file" class="custom-file-input" id="customFile" name="file">
            <label class="custom-file-label" for="customFile">選擇檔案</label>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Submit</button>
    </form>
    <div class="alert alert-info" id="div1"></div>
</div>
<div class="col-3"></div>
@section Scripts{
    <script>
    /*const btnSubmit = document.querySelector('.btn');*/
        /* const divInfo = document.querySelector('#div1');*/

        const nametext = document.querySelector(`#InputName`)
        const smalltext = document.querySelector(`#nameHelp`)
        nametext.addEventListener("blur", () => {
            /*evt.preventDefault();*///取消預設事件ex:btnSubmit更新頁面

            let formData = new FormData(document.useInfo);
            const xhr = new XMLHttpRequest();

            xhr.addEventListener("load", () => {
                const data = xhr.responseText;
                smalltext.innerHTML = `${data}`;
            });
            xhr.open(`POST`, `@Url.Content("~/api/index")`);
            xhr.send(formData);
        });

    </script>
}
